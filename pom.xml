  <groupId>com.github.jikoo</groupId>
  <artifactId>regionerator</artifactId>
  <name>Regionerator</name>
  <version>2.4.1-SNAPSHOT</version>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
